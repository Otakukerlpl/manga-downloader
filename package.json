{
  "name": "manga-downloader",
  "version": "1.1.5",
  "author": "Otakukerlpl",
  "description": "Minimal manga downloader CLI inspired by HakuNeko â€” use responsibly.",
  "main": "electron-main.js",
  "bin": {
    "manga-downloader": "src/cli.js"
  },
  "scripts": {
    "start": "node src/cli.js",
    "start:gui": "electron .",
    "dist": "electron-builder --win --x64",
    "build:exe": "pkg . --targets node18-win-x64 --output bin/manga-downloader.exe",
    "cleanup:dist": "node scripts/cleanup-dist.js"
  },
  "dependencies": {
    "archiver": "^5.3.1",
    "cheerio": "1.0.0-rc.12",
    "electron-updater": "^6.6.2",
    "node-fetch": "^2.6.7",
    "p-limit": "^3.1.0",
    "puppeteer": "^24.32.1",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "electron": "^39.2.6",
    "electron-builder": "^24.6.0",
    "electron-packager": "^17.1.2",
    "pkg": "^5.8.1"
  },
  "build": {
    "publish": [
      {
        "provider": "github",
        "owner": "Otakukerlpl",
        "repo": "manga-downloader"
      }
    ],
    "appId": "com.example.mangadownloader",
    "productName": "Manga Downloader",
    "files": [
      "electron-main.js",
      "preload.js",
      "gui/**/*",
      "src/**/*",
      "package.json",
      "node_modules/**",
      "!**/*.map",
      "!**/*.d.ts"
    ],
    "directories": {
      "buildResources": "build"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    }
  }
}
